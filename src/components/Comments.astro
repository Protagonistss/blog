---
// 评论组件 - 使用 Giscus 评论系统
export interface Props {
  title: string;
  slug: string;
}

const { title, slug } = Astro.props;
---

<div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 flex items-center gap-2">
      <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      评论
    </h2>
    
    <div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 shadow-sm">
      <div id="giscus-comments" class="min-h-[200px] flex items-center justify-center">
        <div class="text-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <p class="text-gray-600 dark:text-gray-400">正在加载评论...</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Giscus 评论系统配置
  function initGiscus() {
    const commentsContainer = document.getElementById('giscus-comments');
    if (!commentsContainer) return;

    // 检查配置是否完整
    const repoId = 'R_kgDOG8Ei9A'; // 实际的 repo-id
    const categoryId = 'DIC_kwDOG8Ei9M4Cvypg'; // 实际的 category-id
    
    // 如果配置不完整，显示配置提示
    if (repoId === 'R_kgDOKQJQJQ' || categoryId === 'DIC_kwDOKQJQJQ') {
      commentsContainer.innerHTML = `
        <div class="text-center p-8">
          <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6">
            <svg class="w-12 h-12 text-yellow-600 dark:text-yellow-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
            <h3 class="text-lg font-semibold text-yellow-800 dark:text-yellow-200 mb-2">评论系统需要配置</h3>
            <p class="text-yellow-700 dark:text-yellow-300 mb-4">请按照配置指南完成 Giscus 评论系统的设置</p>
            <div class="space-y-2 text-sm text-yellow-600 dark:text-yellow-400">
              <p>1. 启用 GitHub Discussions</p>
              <p>2. 安装 Giscus 应用</p>
              <p>3. 获取正确的配置信息</p>
              <p>4. 更新 Comments.astro 组件</p>
            </div>
            <a href="/COMMENT_SETUP.md" class="inline-block mt-4 px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors">
              查看配置指南
            </a>
          </div>
        </div>
      `;
      return;
    }

    const script = document.createElement('script');
    script.src = 'https://giscus.app/client.js';
    script.setAttribute('data-repo', 'Protagonistss/blog');
    script.setAttribute('data-repo-id', repoId);
    script.setAttribute('data-category', 'Announcements');
    script.setAttribute('data-category-id', categoryId);
    script.setAttribute('data-mapping', 'pathname');
    script.setAttribute('data-strict', '0');
    script.setAttribute('data-reactions-enabled', '1');
    script.setAttribute('data-emit-metadata', '0');
    script.setAttribute('data-input-position', 'bottom');
    script.setAttribute('data-theme', 'preferred_color_scheme');
    script.setAttribute('data-lang', 'zh-CN');
    script.setAttribute('data-loading', 'lazy');
    script.crossOrigin = 'anonymous';
    
    // 添加错误处理
    script.onerror = function() {
      commentsContainer.innerHTML = `
        <div class="text-center p-8">
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6">
            <svg class="w-12 h-12 text-red-600 dark:text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-lg font-semibold text-red-800 dark:text-red-200 mb-2">评论加载失败</h3>
            <p class="text-red-700 dark:text-red-300 mb-4">请检查网络连接或稍后重试</p>
            <button onclick="location.reload()" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
              重新加载
            </button>
          </div>
        </div>
      `;
    };
    
    commentsContainer.innerHTML = '';
    commentsContainer.appendChild(script);
  }

  // 页面加载完成后初始化评论系统
  document.addEventListener('DOMContentLoaded', () => {
    // 延迟加载评论，避免影响页面性能
    setTimeout(initGiscus, 1000);
  });
</script>

<style>
  /* 自定义 Giscus 样式 */
  :global(.giscus) {
    margin-top: 0 !important;
  }
  
  :global(.giscus-frame) {
    width: 100% !important;
    border: none !important;
  }
  
  /* 深色模式适配 */
  @media (prefers-color-scheme: dark) {
    :global(.giscus) {
      color-scheme: dark;
    }
  }
</style>
