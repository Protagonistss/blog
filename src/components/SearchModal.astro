</div>

<script>
  class SearchModal {
    constructor() {
      this.modal = document.getElementById('search-modal');
      this.input = document.getElementById('search-input');
      this.results = document.getElementById('search-results');
      this.backdrop = document.getElementById('search-backdrop');
      this.closeBtn = document.getElementById('search-close');
      this.statusEl = document.getElementById('search-status');
      
      this.posts = [];
      this.isOpen = false;
      this.selectedIndex = -1;
      
      this.init();
    }
    
    init() {
      this.bindEvents();
    }
    
    // æ‡’åŠ è½½ï¼šåªæœ‰åœ¨ç¬¬ä¸€æ¬¡æ‰“å¼€æ—¶æ‰å» fetch æ•°æ®
    async loadPosts() {
      if (this.posts.length > 0) return; // å·²ç»åŠ è½½è¿‡
      
      if (this.statusEl) this.statusEl.textContent = 'Loading index...';
      
      try {
        const response = await fetch('/api/search.json');
        if (!response.ok) throw new Error('Failed to load search index');
        this.posts = await response.json();
        
        if (this.statusEl) this.statusEl.textContent = `${this.posts.length} posts indexed`;
        console.log(`[Search] Indexed ${this.posts.length} posts`);
        
        // å¦‚æœç”¨æˆ·å·²ç»åœ¨è¾“å…¥äº†ï¼Œç«‹å³è§¦å‘ä¸€æ¬¡æœç´¢
        if (this.input.value.trim()) {
            this.search(this.input.value);
        }
      } catch (error) {
        console.error('Error loading search index:', error);
        if (this.statusEl) this.statusEl.textContent = 'Error loading index';
      }
    }
    
    bindEvents() {
      // å¿«æ·é”®æ‰“å¼€ (Cmd+K / Ctrl+K)
      document.addEventListener('keydown', (e) => {
        if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
          e.preventDefault();
          this.open();
        }
      });
      
      // ç»‘å®šæ‰€æœ‰çš„è§¦å‘æŒ‰é’®
      document.querySelectorAll('[data-search-trigger]').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            this.open()
        });
      });
      
      // å…³é—­
      this.closeBtn.addEventListener('click', () => this.close());
      this.backdrop.addEventListener('click', () => this.close());
      
      // è¾“å…¥äº‹ä»¶
      this.input.addEventListener('input', (e) => {
        this.selectedIndex = -1; // é‡ç½®é€‰æ‹©
        this.search(e.target.value);
      });
      
      // é”®ç›˜å¯¼èˆª
      this.input.addEventListener('keydown', (e) => this.handleKeyNavigation(e));
    }
    
    handleKeyNavigation(e) {
      if (e.key === 'Escape') {
        this.close();
        return;
      }
      
      const items = this.results.querySelectorAll('a.search-result-item');
      if (items.length === 0) return;
      
      if (e.key === 'ArrowDown') {
        e.preventDefault();
        this.selectedIndex = Math.min(this.selectedIndex + 1, items.length - 1);
        this.updateSelection(items);
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        this.selectedIndex = Math.max(this.selectedIndex - 1, 0);
        this.updateSelection(items);
      } else if (e.key === 'Enter') {
        e.preventDefault();
        if (this.selectedIndex >= 0 && items[this.selectedIndex]) {
          items[this.selectedIndex].click();
        } else if (items.length > 0) {
           // é»˜è®¤å›è½¦é€‰æ‹©ç¬¬ä¸€ä¸ª
           items[0].click();
        }
      }
    }
    
    updateSelection(items) {
      items.forEach((item, index) => {
        if (index === this.selectedIndex) {
          item.classList.add('bg-blue-50', 'dark:bg-blue-900/20', 'border-blue-200', 'dark:border-blue-800');
          item.scrollIntoView({ block: 'nearest' });
        } else {
          item.classList.remove('bg-blue-50', 'dark:bg-blue-900/20', 'border-blue-200', 'dark:border-blue-800');
        }
      });
    }
    
    open() {
      if (this.isOpen) return;
      
      this.modal.classList.remove('hidden');
      // åŠ¨ç”»ç±»å¤„ç†
      requestAnimationFrame(() => {
          this.input.focus();
      });
      
      this.isOpen = true;
      document.body.style.overflow = 'hidden';
      
      // æ‰“å¼€æ—¶åŠ è½½æ•°æ®
      this.loadPosts();
    }
    
    close() {
      this.modal.classList.add('hidden');
      this.input.value = '';
      this.results.innerHTML = this.getEmptyState();
      this.isOpen = false;
      document.body.style.overflow = '';
      this.selectedIndex = -1;
    }
    
    search(query) {
      if (!query.trim()) {
        this.results.innerHTML = this.getEmptyState();
        return;
      }
      
      if (this.posts.length === 0) {
        // ç´¢å¼•è¿˜æ²¡åŠ è½½å®Œ
        this.results.innerHTML = `
            <div class="p-8 text-center text-zinc-500">
                <div class="animate-spin w-6 h-6 border-2 border-blue-500 border-t-transparent rounded-full mx-auto mb-2"></div>
                Searching...
            </div>
        `;
        return;
      }
      
      const normalizedQuery = query.toLowerCase();
      
      // ç®€å•ä¸”é«˜æ•ˆçš„æœç´¢é€»è¾‘
      const results = this.posts.filter(post => {
        const titleMatch = post.title.toLowerCase().includes(normalizedQuery);
        const descMatch = post.description.toLowerCase().includes(normalizedQuery);
        const tagMatch = post.tags.some(tag => tag.toLowerCase().includes(normalizedQuery));
        const catMatch = post.categories.some(cat => cat.toLowerCase().includes(normalizedQuery));
        
        return titleMatch || descMatch || tagMatch || catMatch;
      }).slice(0, 20); // é™åˆ¶æ˜¾ç¤ºå‰20æ¡
      
      this.renderResults(results, query);
    }
    
    renderResults(results, query) {
      if (results.length === 0) {
        this.results.innerHTML = `
          <div class="p-12 text-center text-zinc-500 dark:text-zinc-400">
            <p class="text-lg mb-2">ğŸ¤” No results found</p>
            <p class="text-sm">We couldn't find anything matching "${query}"</p>
          </div>
        `;
        return;
      }
      
      const resultsHtml = results.map((post, index) => `
        <a href="/posts/${post.slug}" class="search-result-item block p-4 border-b border-zinc-100 dark:border-zinc-800 last:border-b-0 hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors cursor-pointer group">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1 min-w-0">
              <h3 class="font-bold text-zinc-900 dark:text-zinc-100 mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors truncate">
                ${this.highlightText(post.title, query)}
              </h3>
              ${post.description ? `<p class="text-sm text-zinc-500 dark:text-zinc-400 mb-2 line-clamp-1">${this.highlightText(post.description, query)}</p>` : ''}
              <div class="flex flex-wrap gap-2 items-center text-xs">
                ${post.categories[0] ? `<span class="px-1.5 py-0.5 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded border border-blue-100 dark:border-blue-800/50 font-medium">${post.categories[0]}</span>` : ''}
                <span class="text-zinc-300 dark:text-zinc-600">|</span>
                <span class="text-zinc-400">${new Date(post.pubDate).toLocaleDateString()}</span>
              </div>
            </div>
            <div class="text-zinc-300 group-hover:text-blue-500 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>
      `).join('');
      
      this.results.innerHTML = resultsHtml;
    }
    
    highlightText(text, query) {
      if (!query || !text) return text;
      // ç®€å•çš„è½¬ä¹‰ï¼Œé˜²æ­¢æ­£åˆ™æŠ¥é”™
      const safeQuery = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      const regex = new RegExp(`(${safeQuery})`, 'gi');
      return text.replace(regex, '<mark class="bg-yellow-200 dark:bg-yellow-900/50 text-zinc-900 dark:text-yellow-100 rounded-sm px-0.5">$1</mark>');
    }
    
    getEmptyState() {
      return `
        <div class="p-12 text-center text-zinc-500 dark:text-zinc-400">
          <div class="w-16 h-16 mx-auto mb-4 bg-zinc-100 dark:bg-zinc-800 rounded-full flex items-center justify-center text-zinc-300 dark:text-zinc-600">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <p class="text-base font-medium">Type to start searching...</p>
        </div>
      `;
    }
  }
  
  // åˆå§‹åŒ–
  document.addEventListener('DOMContentLoaded', () => {
    new SearchModal();
  });
</script>