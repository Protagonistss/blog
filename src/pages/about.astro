---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const categories = [...new Set(publishedPosts.flatMap(post => post.data.categories))];
const tags = [...new Set(publishedPosts.flatMap(post => post.data.tags))];
---

<Layout title="关于作者" description="protagonistss - 技术开发者，专注于分享技术文章和开发经验">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 作者简介 -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <div class="w-24 h-24 bg-gradient-to-br from-primary-500 to-blue-500 rounded-3xl flex items-center justify-center mx-auto mb-6">
          <span class="text-white font-bold text-3xl">P</span>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">protagonistss</h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">技术开发者 · 分享成长</p>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
          专注于分享技术文章和开发经验，记录成长路上的点点滴滴。
          相信技术改变世界，代码创造价值。
        </p>
      </div>

      <!-- 技术栈 -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">技术栈</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          <div class="text-center p-4 bg-primary-50 dark:bg-primary-900/20 rounded-xl">
            <div class="text-2xl mb-2">🐍</div>
            <div class="font-semibold text-gray-900 dark:text-white">Python</div>
          </div>
          <div class="text-center p-4 bg-orange-50 dark:bg-orange-900/20 rounded-xl">
            <div class="text-2xl mb-2">🦀</div>
            <div class="font-semibold text-gray-900 dark:text-white">Rust</div>
          </div>
          <div class="text-center p-4 bg-green-50 dark:bg-green-900/20 rounded-xl">
            <div class="text-2xl mb-2">🟢</div>
            <div class="font-semibold text-gray-900 dark:text-white">Node.js</div>
          </div>
          <div class="text-center p-4 bg-yellow-50 dark:bg-yellow-900/20 rounded-xl">
            <div class="text-2xl mb-2">⚡</div>
            <div class="font-semibold text-gray-900 dark:text-white">JavaScript</div>
          </div>
          <div class="text-center p-4 bg-emerald-50 dark:bg-emerald-900/20 rounded-xl">
            <div class="text-2xl mb-2">💚</div>
            <div class="font-semibold text-gray-900 dark:text-white">Vue</div>
          </div>
          <div class="text-center p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl">
            <div class="text-2xl mb-2">⚛️</div>
            <div class="font-semibold text-gray-900 dark:text-white">React</div>
          </div>
        </div>
      </div>

      <!-- 博客统计 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{publishedPosts.length}</div>
          <div class="text-gray-600 dark:text-gray-400">篇文章</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 text-center">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
            </svg>
          </div>
          <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{categories.length}</div>
          <div class="text-gray-600 dark:text-gray-400">个分类</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 text-center">
          <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"/>
            </svg>
          </div>
          <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{tags.length}</div>
          <div class="text-gray-600 dark:text-gray-400">个标签</div>
        </div>
      </div>

      <!-- 联系方式 -->
      <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">联系方式</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="https://github.com/Protagonistss" target="_blank" rel="noopener noreferrer" 
             class="group flex items-center gap-3 px-6 py-3 bg-gray-100 dark:bg-gray-700 rounded-xl hover:bg-primary-500 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="font-medium">GitHub</span>
          </a>
          <a href="mailto:protagonisths@example.com" 
             class="group flex items-center gap-3 px-6 py-3 bg-gray-100 dark:bg-gray-700 rounded-xl hover:bg-primary-500 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="font-medium">邮箱联系</span>
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>
