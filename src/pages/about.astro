---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const categories = [...new Set(publishedPosts.flatMap(post => post.data.categories))];
const tags = [...new Set(publishedPosts.flatMap(post => post.data.tags))];
---

<Layout title="关于作者" description="Protagonistss - 技术开发者，专注于分享技术文章和开发经验">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 个人简介 -->
    <section class="text-center mb-16">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Protagonistss</h1>
      <p class="text-gray-600 dark:text-gray-400 mb-8">不迁怒，不二过。</p>
      
      <!-- 个人状态 -->
      <div class="text-left max-w-2xl mx-auto space-y-2 mb-8">
        <p class="text-gray-700 dark:text-gray-300">🌱 目前正在学习 Rust🤓</p>
        <p class="text-gray-700 dark:text-gray-300">👯 希望与 JavaScript 项目合作🤝</p>
        <p class="text-gray-700 dark:text-gray-300">💬 可以问我任何问题😁</p>
        <p class="text-gray-700 dark:text-gray-300">⚡ 有趣的事实：我可能是一个模拟💻</p>
      </div>
    </section>

    <!-- 技术栈 -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">🛠️ 技术栈</h2>
      
      <!-- 编程语言 -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">JavaScript</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">TypeScript</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Rust</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Python</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Java</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">C++</span>
        </div>
      </div>
      
      <!-- 框架与工具 -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">React</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Vue.js</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Node.js</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Vim</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Git</span>
          <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-sm">Linux</span>
        </div>
      </div>
    </section>

    <!-- 联系方式 -->
