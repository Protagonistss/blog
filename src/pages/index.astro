---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);

// 获取所有分类和标签
const categories = [...new Set(allPosts.flatMap(post => post.data.categories))];
const tags = [...new Set(allPosts.flatMap(post => post.data.tags))];
---

<Layout title="首页" description="不迁怒，不二过。">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 英雄区域 -->
    <section class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 rounded-3xl mb-16">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="relative px-8 py-16 text-center">
        <div class="inline-flex items-center px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
          技术博客 · 持续更新
        </div>
        <h1 class="text-6xl md:text-7xl font-bold bg-gradient-to-r from-gray-900 via-primary-600 to-blue-600 dark:from-white dark:via-primary-400 dark:to-blue-400 bg-clip-text text-transparent mb-6">
          protagonistss
        </h1>
        <p class="text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
          不迁怒，不二过。<br>
          <span class="text-lg text-gray-500 dark:text-gray-400">分享技术，记录成长</span>
        </p>
        <div class="flex flex-wrap justify-center gap-6 text-sm">
          <div class="flex items-center gap-2 px-4 py-2 bg-white/50 dark:bg-gray-800/50 rounded-full backdrop-blur-sm">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="font-medium">{allPosts.length} 篇文章</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/50 dark:bg-gray-800/50 rounded-full backdrop-blur-sm">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
            </svg>
            <span class="font-medium">{categories.length} 个分类</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/50 dark:bg-gray-800/50 rounded-full backdrop-blur-sm">
            <svg class="w-4 h-4 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"/>
            </svg>
            <span class="font-medium">{tags.length} 个标签</span>
          </div>
        </div>
      </div>
    </section>

    <!-- 最新文章 -->
    <section class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white">最新文章</h2>
        <a href="/archives" class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 transition-colors">
          <span>查看全部</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      <div class="grid gap-8 md:grid-cols-2">
        {posts.slice(0, 6).map((post, index) => (
          <article 
            class="group relative bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl hover:shadow-primary-500/10 transition-all duration-300 hover:-translate-y-1"
            data-post-title={post.data.title}
            data-post-slug={post.slug}
            data-post-description={post.data.description || ''}
            data-post-tags={post.data.tags.join(',')}
            data-post-categories={post.data.categories.join(',')}
          >
            <a href={`/posts/${post.slug}`} class="block">
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors mb-2 line-clamp-2">
                      {post.data.title}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 mb-4">
                      {post.data.description || '暂无描述'}
                    </p>
                  </div>
                  {index < 3 && (
                    <div class="ml-4 flex-shrink-0">
                      <span class="inline-flex items-center px-2 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-xs font-medium rounded-full">
                        热门
                      </span>
                    </div>
                  )}
                </div>
                
                <div class="flex flex-wrap items-center gap-3 text-sm">
                  <div class="flex items-center gap-1 text-gray-500 dark:text-gray-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('zh-CN')}
                    </time>
                  </div>
                  
                  {post.data.categories.length > 0 && (
                    <div class="flex gap-1">
                      {post.data.categories.slice(0, 2).map(category => (
                        <span class="px-2 py-1 bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-md text-xs font-medium">
                          {category}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-1 mt-3">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-md text-xs">
                        #{tag}
                      </span>
                    ))}
                    {post.data.tags.length > 3 && (
                      <span class="px-2 py-1 text-gray-400 text-xs">
                        +{post.data.tags.length - 3}
                      </span>
                    )}
                  </div>
                )}
              </div>
              
              <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 to-blue-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <!-- 分类和标签 -->
    <section class="grid md:grid-cols-2 gap-8">
      <div class="bg-gradient-to-br from-primary-50 to-blue-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-primary-500 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">文章分类</h3>
        </div>
        <div class="flex flex-wrap gap-3">
          {categories.map(category => (
            <a 
              href={`/categories/${category}`}
              class="group px-4 py-2 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-xl text-sm font-medium hover:bg-primary-500 hover:text-white dark:hover:bg-primary-500 dark:hover:text-white transition-all duration-200 hover:scale-105 shadow-sm hover:shadow-md"
            >
              {category}
            </a>
          ))}
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 bg-gray-500 rounded-xl flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">热门标签</h3>
        </div>
        <div class="flex flex-wrap gap-2">
          {tags.slice(0, 8).map(tag => (
            <a 
              href={`/tags/${tag}`}
              class="group px-3 py-1.5 bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-lg text-sm hover:bg-gray-500 hover:text-white dark:hover:bg-gray-500 dark:hover:text-white transition-all duration-200 hover:scale-105"
            >
              #{tag}
            </a>
          ))}
          {tags.length > 8 && (
            <a 
              href="/tags"
              class="px-3 py-1.5 text-gray-400 dark:text-gray-500 text-sm hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
            >
              +{tags.length - 8} 更多
            </a>
          )}
        </div>
      </div>
    </section>
  </div>
</Layout>
