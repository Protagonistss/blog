---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { formatDate, formatDateISO } from '../utils/date';
import QAWidget from '../components/QAWidget.astro';

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter((post: any) => !post.data.draft)
  .sort((a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);

// 获取所有分类和标签
const categories = [...new Set(allPosts.flatMap((post: any) => post.data.categories))];
const tags = [...new Set(allPosts.flatMap((post: any) => post.data.tags))];
---

<Layout title="首页" description="不迁怒，不二过。">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 欢迎区域 -->
    <section class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 rounded-full text-sm font-medium mb-6">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
        </svg>
        欢迎来到技术博客
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        探索技术的世界
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
        分享编程经验、技术思考与成长感悟，记录每一次代码的突破与创新
      </p>
    </section>

    <!-- Q&A 组件 -->
    <QAWidget />

    <!-- 最新文章 -->
    <section class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white">最新文章</h2>
        <a href="/archives" class="flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 transition-colors">
          <span>查看全部</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      <div class="grid gap-8 md:grid-cols-2">
        {posts.slice(0, 6).map((post: any, index: number) => (
          <article 
            class="group relative bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl hover:shadow-primary-500/10 transition-all duration-300 hover:-translate-y-1"
            data-post-title={post.data.title}
            data-post-slug={post.slug}
            data-post-description={post.data.description || ''}
            data-post-tags={post.data.tags.join(',')}
            data-post-categories={post.data.categories.join(',')}
          >
            <a href={`/posts/${post.slug}`} class="block">
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors mb-2 line-clamp-2">
                      {post.data.title}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 mb-4">
                      {post.data.description || '暂无描述'}
                    </p>
                  </div>
                </div>
                
                <div class="flex flex-wrap items-center gap-3 text-sm">
                  <div class="flex items-center gap-1 text-gray-500 dark:text-gray-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <time datetime={formatDateISO(post.data.pubDate)}>
                      {formatDate(post.data.pubDate)}
                    </time>
                  </div>
                  
                  {post.data.categories.length > 0 && (
                    <div class="flex gap-1">
                      {post.data.categories.slice(0, 2).map((category: string) => (
                        <span class="px-2 py-1 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-md text-xs font-medium">
                          {category}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-1 mt-3">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-md text-xs">
                        #{tag}
                      </span>
                    ))}
                    {post.data.tags.length > 3 && (
                      <span class="px-2 py-1 text-gray-400 text-xs">
                        +{post.data.tags.length - 3}
                      </span>
                    )}
                  </div>
                )}
              </div>
              
              <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-blue-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
            </a>
          </article>
        ))}
      </div>
    </section>

  </div>
</Layout>
