---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getTagStats } from '../utils/posts';
import { getTagCloudColor } from '../utils/colors';

const allPosts = await getCollection('posts');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const tagStats = getTagStats(publishedPosts);

// 按首字母分组
const tagsByLetter = tagStats.reduce((acc, { tag, count }) => {
  const firstLetter = tag.charAt(0).toUpperCase();
  const key = /[A-Z]/.test(firstLetter) ? firstLetter : '#';
  if (!acc[key]) acc[key] = [];
  acc[key].push({ tag, count });
  return acc;
}, {} as Record<string, typeof tagStats>);

const sortedKeys = Object.keys(tagsByLetter).sort();
---

<Layout title="标签索引" description="浏览所有文章标签">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <header class="text-center mb-16">
      <div class="inline-flex items-center px-3 py-1 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 rounded-lg text-xs font-bold uppercase tracking-wider mb-6 border border-indigo-100 dark:border-indigo-800/50">
        Keywords Index
      </div>
      <h1 class="text-4xl font-extrabold text-zinc-900 dark:text-zinc-50 mb-6 tracking-tight">
        标签索引
      </h1>
      <p class="text-lg text-zinc-500 dark:text-zinc-400 max-w-2xl mx-auto">
        共 {tagStats.length} 个标签，探索你感兴趣的话题
      </p>
    </header>

    <!-- 热门标签云 -->
    <section class="mb-20">
      <div class="bg-zinc-50 dark:bg-zinc-900/50 rounded-3xl p-8 border border-zinc-100 dark:border-zinc-800">
        <h2 class="text-sm font-bold text-zinc-400 dark:text-zinc-500 mb-8 uppercase tracking-widest text-center">Most Popular</h2>
        <div class="flex flex-wrap justify-center gap-3">
          {tagStats.slice(0, 30).map(({ tag, count }, index) => {
            const colorClass = getTagCloudColor(index);
            const sizeClass = count > 5 ? 'text-lg px-5 py-2.5' : 'text-sm px-4 py-2';
            
            return (
              <a 
                href={`/tags/${tag}`}
                class={`group inline-flex items-center rounded-xl font-medium transition-all duration-200 border shadow-sm ${colorClass} ${sizeClass}`}
              >
                #{tag}
                <span class="ml-2 px-1.5 py-0.5 bg-white/50 dark:bg-black/20 text-current opacity-70 rounded-md text-[10px] font-bold">
                  {count}
                </span>
              </a>
            );
          })}
        </div>
      </div>
    </section>

    <!-- 按字母索引 -->
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">
      {sortedKeys.map(letter => (
        <section class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-2xl p-6 hover:border-indigo-300 dark:hover:border-indigo-700 transition-colors">
          <h2 class="text-2xl font-bold text-zinc-300 dark:text-zinc-600 mb-6 border-b border-zinc-100 dark:border-zinc-800 pb-2">
            {letter}
          </h2>
          <div class="flex flex-wrap gap-2">
            {tagsByLetter[letter].map(({ tag, count }) => (
              <a 
                href={`/tags/${tag}`}
                class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm bg-zinc-50 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 hover:bg-indigo-50 dark:hover:bg-indigo-900/30 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors"
              >
                {tag}
                <span class="ml-1.5 text-xs text-zinc-400 group-hover:text-indigo-400">{count}</span>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</Layout>