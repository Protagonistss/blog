const tools: Array<Tool> = [
  {
    id: 'json-formatter',
    title: 'JSON Formatter',
    description: 'Format, validate, and minify JSON data with syntax highlighting.',
    icon: 'ğŸ“Š',
    href: '/tools/json-formatter',
    status: 'available'
  },
  {
    id: 'qa',
    title: 'Q&A Platform',
    description: 'A dedicated space for technical questions and community answers.',
    icon: 'ğŸ’¬',
    href: '/tools/qa',
    status: 'available'
  },
  {
    id: 'bcrypt-timestamp',
    title: 'Bcrypt & Timestamp',
    description: 'Generate Bcrypt hashes and convert timestamps locally.',
    icon: 'ğŸ›¡ï¸',
    href: '/tools/bcrypt-timestamp',
    status: 'available'
  },
  {
    id: 'base64',
    title: 'Base64 Converter',
    description: 'Encode and decode Base64 strings and files instantly.',
    icon: 'ğŸ”',
    href: '#',
